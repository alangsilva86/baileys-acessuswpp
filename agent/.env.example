PORT=8080

# Baileys service (use the same key as your deployed baileys server)
BAILEYS_BASE_URL=http://localhost:3000
BAILEYS_API_KEY=change-me

# Optional: verify webhook signature from Baileys (signed with API_KEYS[0])
BAILEYS_WEBHOOK_HMAC_SECRET=change-me

# Optional: default instance id to target when no mapping is known
DEFAULT_INSTANCE_ID=default

# n8n endpoints
N8N_CHECK_MARGIN_URL=https://your-n8n/webhook/check-margin
N8N_CREATE_LEAD_URL=https://your-n8n/webhook/create-lead

# OpenAI
OPENAI_API_KEY=sk-...
LLM_MODEL=gpt-4o-mini

# Operation window (simple parser: Mon-Fri 08:00-20:00)
BUSINESS_HOURS=Mon-Fri 08:00-20:00

# Housekeeping
SESSION_TTL_MS=86400000
REQUEST_TIMEOUT_MS=10000
REQUEST_RETRIES=1

SERVICE_NAME=acessus-agent
LOG_LEVEL=info

